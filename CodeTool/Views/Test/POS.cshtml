@{
    Layout = "~/Views/Shared/MasterPage.cshtml";
    ViewBag.Title = "POS订单查询";
}
<style type="text/css">
    .divContent {
        box-shadow: 0 0 10px grey;
        padding: 20px;
    }
    .divCondition {
        margin-bottom: 10px;
    }

</style>
<div class="divPage">
    <div class="divCondition">
        <input type="text" id="txtPayNo" placeholder="请输入订单号" class="w300" style="height:25px;" />
        <input type="button" id="btnSearch" class="jk-button" value="查询" />
    </div>
    <div id="divCode" class="divContent" style="display: none">
    </div>
</div>
<script type="text/javascript">
    $(function () {

    });

    $("#btnSearch").bind("click", function () {
        $.ajax({
            async: true,
            type: "POST",
            url: "/Test/SearchPayNo",
            cache: false,
            timeout: 60 * 60 * 1000,
            dataType: "json",
            data: {
                payno: $("#txtPayNo").val()
            },
            success: function (result) {
                if (result != null) {
                    if (result.Message != null) {
                        alert(result.Message);
                    }
                    else {
                        $("#divCode").fadeIn(200);
                        $("#divCode").html("PayStatus: " + result.PayStatus + "<br/>" + result.LogText);
                    }
                }
            }
        });
    });

</script>
